pipeline {
    agent any

    tools {
        maven 'M3'
    }

    environment {
        ENV = 'qa'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/tu-usuario/tu-repo.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh './mvnw clean test -Denv=qa'
            }
        }

        stage('Archive Results') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }
    }
}
